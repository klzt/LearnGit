
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.6/css/bootstrap.css" rel="stylesheet">
</head>
<body>
    @*<form action="/Account/Login" method="post">*@
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div>
            @ViewBag.loginstate
        </div>
        <div class="container">
            <div class="form-group">
                <label class="col-sm-2">
                    Login ID:
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="loginEmail" placeholder="login number" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">
                    PassWord:
                </label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="loginPwd" placeholder="login pwd" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" class="btn btn-default" value="登录" />
                    <input type="button" class="btn btn-primary" value="注册" />
                </div>
            </div>
        </div>}
    @*</form>*@
</body>
</html>
