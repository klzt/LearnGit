
@{
    Layout = null;
}
@model MyMVC.Models.SysUser
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.6/css/bootstrap.css" rel="stylesheet">
</head>
<body>
    <div class="form-group"> 
        <div class="form-control">
           @Html.DisplayNameFor(m=>m.UserName): @Html.DisplayFor(m=>m.UserName)
        </div>
        <div class="form-control">
            @Html.DisplayNameFor(m=>m.Email):@Html.DisplayFor(m=>m.Email)
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(m=>m.SysUserRoles)<br />
            @foreach (var item in Model.SysUserRoles)
            {
                <div class="form-control">
                    @Html.DisplayNameFor(m=>item.SysRoles.RoleName):@Html.DisplayFor(a=>item.SysRoles.RoleName)
                </div>
                <div class="form-control">
                    @Html.DisplayNameFor(m=>item.SysRoles.RoleDesc):@Html.DisplayFor(a=>item.SysRoles.RoleDesc)
                </div>
            }
        </div>
    </div>
</body>
</html>
